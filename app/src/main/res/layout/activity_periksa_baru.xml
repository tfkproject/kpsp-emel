<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


                <TextView
                    android:id="@+id/lblNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:text="Nama Lengkap" />

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblNama"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/lblTgp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Tanggal Pemeriksaan"
                    android:layout_below="@+id/txtNama"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/btnTglPrk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Pilih tanggal"
                    android:textSize="12dp"
                    android:layout_below="@+id/lblTgp"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"/>

                <TextView
                    android:id="@+id/txtTgp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/btnTglPrk"
                    android:text="Pilih tanggal"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/lblTjn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Tujuan"
                    android:layout_below="@+id/txtTgp"
                    android:layout_alignEnd="@+id/lblAlmt" />

                <Spinner
                    android:id="@+id/spTjn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/lblTjn"/>

                <Button
                    android:id="@+id/btnMulai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mulai"
                    android:layout_below="@+id/spTjn"
                    android:drawableLeft="@drawable/ic_adjust_black_24dp"/>
        </RelativeLayout>

</ScrollView>