<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


                <TextView
                    android:id="@+id/lblNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:text="Nama Lengkap" />

                <EditText
                    android:id="@+id/txtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblNama"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/lblTgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Tanggal Lahir"
                    android:layout_below="@+id/txtNama"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/btnTgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Pilih tanggal"
                    android:textSize="12dp"
                    android:layout_below="@+id/lblTgl"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/txtTgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Pilih tanggal"
                    android:layout_below="@+id/btnTgl"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/lblJk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/txtTgl"
                    android:text="Jenis Kelamin" />

                <Spinner
                    android:id="@+id/spJk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/lblJk"/>

                <TextView
                    android:id="@+id/lblPddk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendidikan"
                    android:layout_below="@+id/spJk"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:id="@+id/spPddk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_alignLeft="@+id/lblPddk"
                    android:layout_below="@+id/lblPddk"/>
                <!--<EditText
                    android:id="@+id/txtPddk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lblPddk"
                    android:layout_below="@+id/lblPddk"
                    android:inputType="text" />-->

                <!--<TextView
                    android:id="@+id/lblNamaOrtu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Orang Tua"
                    android:layout_below="@+id/txtPddk"
                    android:layout_alignParentStart="true" />-->
                <TextView
                    android:id="@+id/lblNamaOrtu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Orang Tua"
                    android:layout_below="@+id/spPddk"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/txtNamaOrtu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblNamaOrtu"
                    android:inputType="text" />

                <!--<TextView
                    android:id="@+id/lblAlmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:layout_below="@+id/txtPddk"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="61dp" />-->
                <TextView
                    android:id="@+id/lblAlmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:layout_below="@+id/spPddk"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="61dp" />

                <EditText
                    android:id="@+id/txtAlmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblAlmt"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/lblTgp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Tanggal Pemeriksaan"
                    android:layout_below="@+id/txtAlmt"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/btnTglPrk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Pilih tanggal"
                    android:textSize="12dp"
                    android:layout_below="@+id/lblTgp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/txtTgp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/btnTglPrk"
                    android:text="Pilih tanggal" />

                <TextView
                    android:id="@+id/lblTjn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Tujuan"
                    android:layout_below="@+id/txtTgp"
                    android:layout_alignEnd="@+id/lblAlmt" />

                <Spinner
                    android:id="@+id/spTjn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/lblTjn"/>

                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:layout_below="@+id/spTjn"/>
        </RelativeLayout>

</ScrollView>